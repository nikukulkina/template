.slider
	margin-top 112px // поменять когда поправится виджет ВК
	margin-bottom 70px
	&__title
		margin-bottom 55px
		font-family 'Oswald'
		font-size 55px
		font-weight 500
		line-height 60px
	&__slider-container
		width 100%
		height 330px
	&__slide
		width 100%
	&__slide-title
		padding-top 17px
		font-weight bold
		line-height 31px
		letter-spacing .1px
	&__img
		position relative
	&__btn-img
		padding 16px 18px
		background-color #edf1f7
		border-radius 50%
		transition background-color .3s ease-in
		&:hover
			background linear-gradient(#3c90f1, #2665ae)
	&__btn-prev,
	&__btn-next
		position absolute
		z-index 5
		top 35%
		padding 8px
		width 60px
		height 60px
		cursor pointer
		background-color #ffffff
		border none
		border-radius 50%
	&__btn-prev
		transform translate(-30px, -50%)
	&__btn-next
		right 0
		transform translate(30px, -50%)
