.numered-list
	margin-top 36px
	&__title
		padding-bottom 33px
		font-family 'Oswald'
		font-size 30px
		font-weight 500
		letter-spacing -.1px
	&__list
		list-style-type none
		counter-reset number

	&__item
		position relative
		margin-bottom 10px
		padding-left 43px

		&:before
			position absolute
			left 0
			font-family 'Oswald'
			font-size 22px
			font-weight bold
			content counter(number)
			counter-increment number
			color $blue
	@media(max-width 600px)
		margin-top 20px
		&__title
			padding-bottom 20px
			font-size 24px
		&__list
			font-size 16px
			line-height 20px
			text-align justify
		&__item
			&:before
				font-size 16px
			